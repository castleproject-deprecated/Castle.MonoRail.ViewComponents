<% 
component Grid, {@source: users}: 
	section header:
	%>
		<tr>
			<th>User name</th>
			<th style="padding-left: 10px">Email</th>
		</tr>
	<%
	end
	section item:
	%>
		<tr>
			<td>${item.Name}</td>
			<td>${item.Email}</td>
		</tr>
	<%
	end
	section empty:
	%>
		<h3>The users gird has no data, oh my!</h3>
	<%
	end
end
%>