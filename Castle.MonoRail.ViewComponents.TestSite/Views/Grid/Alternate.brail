<% 
component Grid, {@source: users}: 
	section header:
	%>
	<tr>
			<th>User name</th>
			<th style="padding-left: 10px">Email</th>
		</tr>
	<%
	end
	section item:
	%>
		<tr>
			<td>${item.Name}</td>
			<td>${item.Email}</td>
		</tr>
	<%
	end
	
	section alternateItem:
	%>
		<tr>
			<td style="background: #fea">${item.Name}</td>
			<td style="background: #fea">${item.Email}</td>
		</tr>
	<%
	end
end
%>